{
  "compilerOptions": {
    "outDir": "compiled",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules/**"
  ]
}